@model UsuarioModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo="Alteração de Usuário";
    else
        ViewBag.Subtitulo="Cadastro de Usuário";
}

<h1 class="text-primary">@ViewBag.Subtitulo</h1>
<hr>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdUsuario">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome</label><br>
        <input asp-for="@Model.Nome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.IdGrupo">Grupo</label><br>
        <select asp-for="@Model.IdGrupo" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Grupo"></select>
        <span asp-validation-for="@Model.IdGrupo" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Email">Email</label><br>
        <input asp-for="@Model.Email" class="form-control">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Telefone">Telefone</label><br>
        <input asp-for="@Model.Telefone" class="form-control">
        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
    </div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>