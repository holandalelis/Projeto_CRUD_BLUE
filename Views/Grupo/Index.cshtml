@model IEnumerable<GrupoModel>
@{
    ViewBag.Subtitulo = "Listagem de Grupos";
}

<header class="d-flex justify-content-between align-items-center">
    <div>
        <h1 class="text-primary">@ViewBag.Subtitulo</h1>
    </div>
    <div>
        <a asp-action="Cadastrar" class="btn btn-primary">Novo Grupo</a>
    </div>
</header>
<hr>

<partial name="_Mensagem"></partial>

@if (Model.Count() > 0)
{
    <table class="table table-striped tabela-categorias">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grupos in Model)
            {
                <tr>
                    <td>@grupos.Nome</td>
                    <td>
                        <a asp-action="Cadastrar" asp-route-id="@grupos.IdGrupo"
                    class="btn btn-sm btn-secondary">Alterar</a>
                        <a asp-action="Excluir" asp-route-id="@grupos.IdGrupo" class="btn btn-sm btn-danger">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há nenhum Grupo cadastrado.</p>
}