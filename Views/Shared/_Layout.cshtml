@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers;

@{
    var controllerAtual = ViewContext.RouteData.Values["controller"].ToString();
    var classeMenuPrincipal = controllerAtual == "Home" ? "active" : "";
    var classeMenuUsuarios = controllerAtual == "Usuario" ? "active" : "";
    var classeMenuGrupos = controllerAtual == "Grupo" ? "active" : "";
}


<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/lib/bootstrap5/dist/css/bootstrap.css">
    <link rel="stylesheet" href="/css/estilos.css">
    <title>Projeto Agenda :: @ViewBag.Subtitulo</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">ProjetoAgenda</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarMain">
                <div class="navbar-nav ms-auto">
                    <a class="nav-link @classeMenuPrincipal" asp-controller="Home" asp-action="Index">Principal</a>
                    <a class="nav-link @classeMenuUsuarios" asp-controller="Usuario" asp-action="Index">Usuarios</a>
                    <a class="nav-link @classeMenuGrupos" asp-controller="Grupo" asp-action="Index">Grupos</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="container mt-2">
        @RenderBody()
    </div>
    <div class="text-light bg-dark p-3 fixed-bottom text-center">
        ProjetoBlueTechnology&copy; @DateTime.Now.Year.ToString()<br>
    </div>

    <script src="/lib/bootstrap5/dist/js/bootstrap.js"></script>
</body>
</html>